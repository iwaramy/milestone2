  body

    //gotop
    #gotop
      i.glyphicon.glyphicon-menu-up

    //nav
    .nav
      nav.navbar.navbar-default.navbar-fixed-top(role='navigation')
        .container
          .navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-ex1-collapse')
              span.sr-only menu change
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a(href='../index.html')
              .logo
                h1 Vision International C.P.A. Firm
          // 手機隱藏選單區
          .collapse.navbar-collapse.navbar-ex1-collapse
            // 右選單
            ul.nav.navbar-nav.navbar-right
              li
                a(href='../index.html') Home
              li
                a(href='service.html') Service Items
              li
                a(href='about.html') About Vision
              li
                a(href='question.html') Questions
              li
                a.contacta(href='contact.html') Contact Us
                  i.glyphicon.glyphicon-envelope
              li#lang
                a(href='../../html/contact.html') 中文
          // 手機隱藏選單區結束

    //breadcrumb
    .bread
      .container
        ul.breadcrumb
          li
            img(src='../img/icon_home.png',alt='Home')
            a(href='../index.html') Home
          li.active
            a(href='contact.html') Contact Us

    //header
    header.text-center
      img.img(src='../img/contact_bg.jpg',alt='Contact Us')
      .headertext.text-left

    //main
    main.text-center
      .container
        h2 Message
        p Please leave your message and Vision will get back to you soon!
        .row
          .col-sm-12.map
            iframe(src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d14459.217014631568!2d121.5639342!3d25.0407162!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x3542e048ac17e8e!2z6YGg6KaL5ZyL6Zqb5pyD6KiI5bir5LqL5YuZ5omA!5e0!3m2!1szh-TW!2stw!4v1523952294451" width="500" height="380" frameborder="0" style="border:0" allowfullscreen)
          .col-sm-12
            .form.text-right
              span Name：
              input(type='text' placeholder='Please enter your name.')
              br
              span Phone：
              input(type='text' placeholder='Please enter your contact number or mobile phone.')
              br
              span Email：
              input(type='text' placeholder='Please enter your email.')
              br
              span.areaspan Content：
              textarea.area(type='textarea' placeholder='Please enter the content you want to consult' rows='6')
            .submit Send Out

    //footer
    include _footer.pug

